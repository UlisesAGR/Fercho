<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Ripple">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Ripple.Borderless" parent="Ripple">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ItemDividerView">
        <item name="android:layout_height">0.1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="DragIndicatorView">
        <item name="android:layout_height">6dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@drawable/ic_indicator</item>
    </style>

</resources>